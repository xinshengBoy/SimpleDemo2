<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谷歌翻译"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <EditText
            android:id="@+id/et_google_translate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请输入要翻译的内容"
            android:background="@drawable/bg_button"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/btn_translate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="翻译"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="#FF46B7FC"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_google_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度翻译"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <EditText
            android:id="@+id/et_baidu_translate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="请输入要翻译的内容"
            android:background="@drawable/bg_button"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/btn_baidu_translate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="翻译"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="#FF46B7FC"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_baidu_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="====》"/>
        <Button
            android:id="@+id/btn_baidu_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_baidu_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"/>
</LinearLayout>