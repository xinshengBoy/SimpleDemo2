<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/iv_red_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/frog_logo"
            android:scaleType="center"
            android:contentDescription="@null"/>
        <ImageView
            android:id="@+id/iv_redpoint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/dian"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingStart="10dp">
        <TextView
            android:id="@+id/txt_red_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="腾讯体育"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/txt_red_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="边线, 有些小红点外边有白边, 若是设置了宽度,则会添加边线; 边线算在Badge整个的大小当中"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_red_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="13:29"
        android:gravity="center"/>
</LinearLayout>