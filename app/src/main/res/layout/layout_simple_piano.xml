<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/headerLayout"
        layout="@layout/layout_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_piano1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="1"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_piano2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="2"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_piano3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="3"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_piano4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="4"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_piano5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="5"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_piano6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="6"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_piano7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="7"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_piano8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/piano_selector"
            android:text="8"
            android:textSize="20sp"
            android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>