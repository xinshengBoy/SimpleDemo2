<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rtv="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--actionbar-->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="左上角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#EE8262"
                app:corner_radius_top_left="40dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="右上角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#EE7AE9"
                app:corner_radius_top_right="40dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="左下角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#9F79EE"
                app:corner_radius_bottom_left="40dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="右下角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#FF6A6A"
                app:corner_radius_bottom_right="40dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="左边角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#9F79EE"
                app:corner_radius_bottom_left="30dp"
                app:corner_radius_top_left="30dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="右边角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#FF6A6A"
                app:corner_radius_bottom_right="30dp"
                app:corner_radius_top_right="30dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="三边角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#9F79EE"
                app:corner_radius_bottom_left="30dp"
                app:corner_radius_top_left="30dp"
                app:corner_radius_top_right="30dp"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <com.ruffian.library.widget.RTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="三边角圆"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="#FF6A6A"
                app:corner_radius_bottom_left="30dp"
                app:corner_radius_bottom_right="30dp"
                app:corner_radius_top_right="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <com.ruffian.library.widget.RTextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="圆形"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="@color/colorPrimary"
                app:corner_radius="70dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
            <com.ruffian.library.widget.RTextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="圆形带边框"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:background_normal="@color/colorGray"
                app:corner_radius="50dp"
                app:border_width_normal="5dp"
                app:border_color_normal="#EE8262"
                android:layout_margin="5dp"
                android:gravity="center"/>
            <com.ruffian.library.widget.RTextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="圆形边框"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:border_color_normal="@color/colorAccent"
                app:border_width_normal="5dp"
                app:corner_radius="50dp"
                android:layout_margin="5dp"
                android:gravity="center"/>
        </LinearLayout>
        <com.ruffian.library.widget.RTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="常用四周圆角"
            android:textColor="@android:color/black"
            app:text_color_pressed="@android:color/white"
            android:textSize="20sp"
            app:background_normal="@color/color_orange"
            app:background_pressed="@color/colorAccent"
            app:icon_direction="left"
            app:icon_src_normal="@mipmap/setting"
            app:icon_src_pressed="@mipmap/search"
            app:icon_height="32dp"
            app:icon_width="32dp"
            app:corner_radius="10dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:clickable="true"/>
        <com.ruffian.library.widget.RTextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="虚线+变色"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            app:corner_radius="10dp"
            app:border_color_normal="@color/colorAccent"
            app:border_color_pressed="@color/color_orange"
            app:text_color_pressed="@color/color_orange"
            app:background_normal="@color/colorSelect"
            app:border_dash_gap="3dp"
            app:border_dash_width="8dp"
            app:border_width_normal="3dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="编辑框"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <com.ruffian.library.widget.REditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon_width="30dp"
            app:icon_height="30dp"
            app:icon_src_normal="@mipmap/search"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:border_width_normal="2dp"
            app:border_color_normal="@color/colorSelect"
            app:background_normal="@color/colorGray"
            app:corner_radius="10dp"
            android:hint="请输入金额"
            android:inputType="number"/>
        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:background_normal="@color/red"
            android:layout_margin="10dp"
            app:corner_radius="6dp"
            android:padding="5dp">
            <com.ruffian.library.widget.RTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/setting"
                android:drawablePadding="10dp"
                android:text="设置"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </com.ruffian.library.widget.RLinearLayout>
    </LinearLayout>
</ScrollView>